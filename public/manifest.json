{
  "manifest_version": 3,
  "name": "Find YouTube Gems",
  "version": "1.0.0",
  "description": "An extension that will help find better videos upon searching. It's implemented through a filterning strategy.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/results*",
        "https://m.youtube.com/results*"
      ],
      "js": ["src/content.tsx"]
    }
  ]
}
